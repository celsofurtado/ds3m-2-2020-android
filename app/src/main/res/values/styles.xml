<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="user_name" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
    </style>

    <style name="console_maker" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2E2929</item>
    </style>

    <style name="post_title" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="post_text" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="likes_comments" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>